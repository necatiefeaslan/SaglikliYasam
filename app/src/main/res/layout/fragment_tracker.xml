<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewStepsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Günlük Adım Sayısı"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewStepsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/textViewStepsTitle"
        app:layout_constraintTop_toBottomOf="@id/textViewStepsTitle"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/imageViewSteps"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_steps"
        app:layout_constraintStart_toEndOf="@id/textViewStepsCount"
        app:layout_constraintTop_toTopOf="@id/textViewStepsCount"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textViewWaterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Günlük Su Tüketimi"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewStepsCount"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/textViewWaterCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/textViewWaterTitle"
        app:layout_constraintTop_toBottomOf="@id/textViewWaterTitle"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/imageViewWater"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_water"
        app:layout_constraintStart_toEndOf="@id/textViewWaterCount"
        app:layout_constraintTop_toTopOf="@id/textViewWaterCount"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/buttonAddWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Su Ekle"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/textViewWaterCount"
        app:layout_constraintTop_toBottomOf="@id/textViewWaterCount" />

</androidx.constraintlayout.widget.ConstraintLayout>
